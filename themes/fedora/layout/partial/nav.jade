nav.navbar.navbar-default.navbar-fixed-top.navbar-custom
    .container
        .navbar-header
            button(class="navbar-toggle", type="button", data-toggle="collapse", data-target="#main-navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a(class="navbar-brand", href=url_for())
              img.long(class="hidden-xs" src=url_for(theme.logo.long))
              img.short(class="hidden-xs" src=url_for(theme.logo.short))
              img(class="visible-xs-block" src=url_for(theme.logo.short))
        #main-navbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
                each value, key in theme["navbar-links"]
                    li
                        a(href=url_for(value))!= key
        .avatar-container(class="hidden-xs")
            .avatar-img-border
                a(href=url_for())
                    img(class="avatar-img", src=url_for(theme.avatar))
